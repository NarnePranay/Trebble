<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context="com.example.half_bloodprince.trebble.Activities.CallActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFF"
        android:elevation="0dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Call Service Centre"
        />

    <LinearLayout
        android:background="#FFFF"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/my_toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Describe your problem in one liner."
        android:fontFamily="@font/ralewaysemibold"
        android:textSize="19sp"/>

    <android.support.design.widget.TextInputEditText
        android:id="@+id/oneliner"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your text here."
        android:maxLines="2"
        android:fontFamily="@font/ralewaysemibold"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Back Nummber"
            android:fontFamily="@font/ralewaysemibold"
            android:textSize="19sp"
            />
        <android.support.design.widget.TextInputEditText
            android:id="@+id/contact"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Mobile Number"
            android:maxLines="2"
            android:fontFamily="@font/ralewaysemibold"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a Category below"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:fontFamily="@font/ralewaysemibold"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </Spinner>
        
        <Button
            android:id="@+id/requestCall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbtn"
            android:text="Request call"
            android:textSize="20sp"
            android:textColor="#043b8f"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/ralewaysemibold"
            android:layout_marginTop="50dp"
            android:textAllCaps="false"/>

        <ImageView
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/s247"
            android:alpha="0.2"/>

    </LinearLayout>

</RelativeLayout>
